<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_fundo"
    tools:context=".Quiz">

    <ImageView
        android:id="@+id/ivImagem"
        android:layout_width="350sp"
        android:layout_height="150sp"
        android:layout_marginTop="30dp"
        android:cropToPadding="true"
        android:foreground="@drawable/imagens_estilo"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoltar" />

    <TextView
        android:id="@+id/tvQuestao"
        android:layout_width="370sp"
        android:layout_height="100sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="Exemplo de questÃ£o"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImagem" />

    <Button
        android:id="@+id/btnAlternativa01"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/alternativas_estilo"
        android:text="Alternativa 01"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestao" />

    <Button
        android:id="@+id/btnAlternativa02"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Alternativa 02"
        android:textStyle="bold"
        android:background="@drawable/alternativas_estilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativa01" />

    <Button
        android:id="@+id/btnAlternativa03"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/alternativas_estilo"
        android:text="Alternativa 03"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativa02" />

    <Button
        android:id="@+id/btnAlternativa04"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Alternativa 04"
        android:textStyle="bold"
        android:background="@drawable/alternativas_estilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativa03" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>